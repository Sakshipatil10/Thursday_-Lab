  class Alpha {

  public static void main(String args[]) {
    int n = 5;

    char ch = 'A';

	for (int i = 0; i <= 4; i++) {

	for (int j = 0; j <= i; j++) {

		System.out.print(ch++);}

	System.out.println();

	}

}

}

